<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/ivLock"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/lock"
            android:layout_marginTop="48dp"
            android:contentDescription="Lock Icon" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create a new passcode"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text_color"
            android:layout_marginTop="24dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You'll use this to login to your account"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:gravity="center">

            <EditText
                android:id="@+id/etPasscode1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textAlignment="center"
                android:background="@drawable/passcode_input_background"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/etPasscode2"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textAlignment="center"
                android:background="@drawable/passcode_input_background"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/etPasscode3"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textAlignment="center"
                android:background="@drawable/passcode_input_background"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/etPasscode4"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textAlignment="center"
                android:background="@drawable/passcode_input_background"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/etPasscode5"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textAlignment="center"
                android:background="@drawable/passcode_input_background"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/etPasscode6"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textAlignment="center"
                android:background="@drawable/passcode_input_background"/>
        </LinearLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="4"
            android:layout_marginTop="32dp">

            <Button
                android:id="@+id/btn1"
                style="@style/NumberPadButton"
                android:text="1" />

            <Button
                android:id="@+id/btn2"
                style="@style/NumberPadButton"
                android:text="2" />

            <Button
                android:id="@+id/btn3"
                style="@style/NumberPadButton"
                android:text="3" />

            <Button
                android:id="@+id/btn4"
                style="@style/NumberPadButton"
                android:text="4" />

            <Button
                android:id="@+id/btn5"
                style="@style/NumberPadButton"
                android:text="5" />

            <Button
                android:id="@+id/btn6"
                style="@style/NumberPadButton"
                android:text="6" />

            <Button
                android:id="@+id/btn7"
                style="@style/NumberPadButton"
                android:text="7" />

            <Button
                android:id="@+id/btn8"
                style="@style/NumberPadButton"
                android:text="8" />

            <Button
                android:id="@+id/btn9"
                style="@style/NumberPadButton"
                android:text="9" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <Button
                android:id="@+id/btn0"
                style="@style/NumberPadButton"
                android:text="0" />

            <ImageButton
                android:id="@+id/btnBackspace"
                style="@style/NumberPadButton"
                android:src="@drawable/backarrow"
                android:contentDescription="Backspace" />
        </GridLayout>

    </LinearLayout>
</ScrollView>