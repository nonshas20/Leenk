<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/logotransaparenttext"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:layout_marginBottom="2dp"
            app:tint="@android:color/black" />

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:contentDescription="Close"
            app:tint="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/ic_lock"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:contentDescription="Lock Icon"
            app:tint="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your passcode"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="32dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="30dp"
            android:gravity="center">

            <EditText
                android:id="@+id/etPasscode1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textAlignment="center"
                android:background="@drawable/passcode_input_background"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/etPasscode2"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textAlignment="center"
                android:background="@drawable/passcode_input_background"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/etPasscode3"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textAlignment="center"
                android:background="@drawable/passcode_input_background"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/etPasscode4"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textAlignment="center"
                android:background="@drawable/passcode_input_background"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/etPasscode5"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textAlignment="center"
                android:background="@drawable/passcode_input_background"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/etPasscode6"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textAlignment="center"
                android:background="@drawable/passcode_input_background"/>


        </LinearLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="4"
            android:useDefaultMargins="true">

            <!-- Number pad buttons -->
            <Button
                android:id="@+id/btn1"
                style="@style/NumberPadButtonWhite"
                app:backgroundTint="@android:color/white"
                android:text="1" />

            <Button
                android:id="@+id/btn2"
                style="@style/NumberPadButtonWhite"
                app:backgroundTint="@android:color/white"
                android:text="2" />

            <Button
                android:id="@+id/btn3"
                style="@style/NumberPadButtonWhite"
                app:backgroundTint="@android:color/white"
                android:text="3" />

            <Button
                android:id="@+id/btn4"
                style="@style/NumberPadButtonWhite"
                app:backgroundTint="@android:color/white"
                android:text="4" />

            <Button
                android:id="@+id/btn5"
                style="@style/NumberPadButtonWhite"
                app:backgroundTint="@android:color/white"
                android:text="5" />

            <Button
                android:id="@+id/btn6"
                style="@style/NumberPadButtonWhite"
                app:backgroundTint="@android:color/white"
                android:text="6" />

            <Button
                android:id="@+id/btn7"
                style="@style/NumberPadButtonWhite"
                app:backgroundTint="@android:color/white"
                android:text="7" />

            <Button
                android:id="@+id/btn8"
                style="@style/NumberPadButtonWhite"
                app:backgroundTint="@android:color/white"
                android:text="8" />

            <Button
                android:id="@+id/btn9"
                style="@style/NumberPadButtonWhite"
                app:backgroundTint="@android:color/white"
                android:text="9" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <Button
                android:id="@+id/btn0"
                style="@style/NumberPadButtonWhite"
                app:backgroundTint="@android:color/white"
                android:text="0" />

            <ImageButton
                android:id="@+id/btnBackspace"
                style="@style/NumberPadButtonWhite"
                android:src="@drawable/ic_backspace"
                android:contentDescription="Backspace"
                app:tint="@android:color/black" />

        </GridLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp">

        <ImageButton
            android:id="@+id/btnFaceLogin"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/facerecognition"
            android:background="?attr/selectableItemBackground"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:padding="8dp"
            android:contentDescription="Face Login"
            app:tint="@android:color/black" />

        <Button
            android:id="@+id/btnForgotPasscode"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Forgot your passcode?"
            android:textColor="@android:color/black"
            android:background="?attr/selectableItemBackground"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/btnFingerprintLogin"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/fingerprint"
            android:background="?attr/selectableItemBackground"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:padding="8dp"
            android:contentDescription="Fingerprint Login"
            app:tint="@android:color/black" />

    </LinearLayout>

</LinearLayout>