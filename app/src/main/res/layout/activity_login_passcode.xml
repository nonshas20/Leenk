<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/logotransaparenttext"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:layout_marginBottom="2dp"/>

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:contentDescription="Close" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/ic_lock"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:contentDescription="Lock Icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your passcode"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="32dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="30dp"
            android:gravity="center">

            <EditText
                android:id="@+id/etPasscode1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textAlignment="center"
                android:background="@drawable/passcode_input_background"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/etPasscode2"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textAlignment="center"
                android:background="@drawable/passcode_input_background"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/etPasscode3"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textAlignment="center"
                android:background="@drawable/passcode_input_background"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/etPasscode4"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textAlignment="center"
                android:background="@drawable/passcode_input_background"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/etPasscode5"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textAlignment="center"
                android:background="@drawable/passcode_input_background"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/etPasscode6"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textAlignment="center"
                android:background="@drawable/passcode_input_background"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnFaceLogin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Face Login"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnFingerprintLogin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fingerprint Login"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="4"
            android:useDefaultMargins="true">

            <Button
                android:id="@+id/btn1"
                style="@style/NumberPadButton"
                android:text="1"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn2"
                style="@style/NumberPadButton"
                android:text="2"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn3"
                style="@style/NumberPadButton"
                android:text="3"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn4"
                style="@style/NumberPadButton"
                android:text="4"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn5"
                style="@style/NumberPadButton"
                android:text="5"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn6"
                style="@style/NumberPadButton"
                android:text="6"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn7"
                style="@style/NumberPadButton"
                android:text="7"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn8"
                style="@style/NumberPadButton"
                android:text="8"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn9"
                style="@style/NumberPadButton"
                android:text="9"
                android:textColor="@color/white"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <Button
                android:id="@+id/btn0"
                style="@style/NumberPadButton"
                android:text="0"
                android:textColor="@color/white"/>

            <ImageButton
                android:id="@+id/btnBackspace"
                style="@style/NumberPadButton"
                android:src="@drawable/ic_backspace"
                android:contentDescription="Backspace" />

        </GridLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnForgotPasscode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot your passcode?"
        android:textColor="@color/colorAccent"
        android:background="?attr/selectableItemBackground"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

</LinearLayout>